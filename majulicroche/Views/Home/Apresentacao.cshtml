@model Tuple<IEnumerable<majulicroche.Models.Produto>, IEnumerable<majulicroche.Models.Cupom>>

@{
    ViewData["Title"] = "Apresentação";
    var produtos = Model.Item1;
    var cupons = Model.Item2;
}

<div class="container-fluid">
    <div class="row">
        <!-- Seção principal com os produtos -->
        <div class="col-md-9">
            <h2 style ="color: deeppink;">Nossos Produtos</h2>

            @if (produtos == null || !produtos.Any())
            {
                <p>Ainda não temos produtos cadastrados.</p>
            }
            else
            {
                <div class="row">
                    @foreach (var item in produtos)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <!-- Espaço reservado para imagem futura -->
                                    <div class="mb-3 text-center" style="height: 150px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                        <span class="text-muted">Imagem do Produto</span>
                                    </div>
                                    <h5 class="card-title">@item.Nome</h5>
                                    <p class="card-text">Tamanho: @item.Tamanho</p>
                                    <p class="card-text">Cor: @item.Cor</p>
                                    <p class="card-text">Valor: @item.Valor.ToString("C")</p>

                                    <!-- Botão para adicionar ao carrinho -->
                                    <button class="btn btn-primary"> <!-- onclick="adicionarAoCarrinho(@item.Id)" -->
                                        <i class="fas fa-shopping-cart"></i> Add ao Carrinho
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Barra lateral com os cupons -->
        <div class="col-md-3">
            <h4 style="color: deeppink;"> <i class="fas fa-tag"></i> Cupons Disponíveis</h4>

            @if (cupons == null || !cupons.Any())
            {
                <p>Não há cupons disponíveis no momento.</p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var cupom in cupons.Where(c => c.DataValidade >= DateTime.Now))
                    {
                        <li class="list-group-item">
                            <strong>@cupom.Codigo</strong> - Desconto: @cupom.ValorDesconto
                            <br />
                            Válido até: @cupom.DataValidade.ToShortDateString()
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

