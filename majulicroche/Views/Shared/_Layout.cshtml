<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Majuli crochê</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/majulicroche.styles.css" asp-append-version="true" />
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #fff4f4;
            color: #4a154b;
            line-height: 1.6;
            padding: 20px;
        }

        header {
            padding: 16px 40px;
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
        }

        .logo {
            font-size: 2em;
            font-weight: 700;
            color: deeppink;
            text-decoration: none;
        }
        .container {
            background-color: #ffffff;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 1250px;
            margin: 0 auto;
            text-align: center;
        }

        .image-container {
            display: flex;
            justify-content: space-around;
            margin: 20px 0;
        }

            .image-container img {
                border-radius: 10px;
                width: 30%;
                height: auto;
                box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            }

        h1 {
            color: #ff497c;
            font-size: 20px;
            margin-bottom: 15px;
        }

        p {
            font-size: 1em;
            color: #4a154b;
            margin-bottom: 20px;
        }

        .highlight {
            color: #ff497c;
            font-weight: 700;
        }

        footer {
            text-align: center;
            margin-top: 30px;
            font-size: 0.85em;
            color: #6a1b4d;
        }
    </style>
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">Majuli Crochês</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class=""></i> Nós
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Apresentacao">
                                <i class="fas fa-home"></i> Início
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produtoes" asp-action="Index">
                                <i class="fas fa-box-open"></i> Produtos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">
                                <i class="fas fa-th-list"></i> Categorias do produto
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cupom" asp-action="Index">
                                <i class="fas fa-tag"></i> Cupons
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vendas" asp-action="Index">
                                <i class="fas fa-receipt"></i> Vendas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Fornecedors" asp-action="Index">
                                <i class="fas fa-truck"></i> Fornecedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carrinhoes" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Carrinho
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
                
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>&copy; 2024 Majuli Crochê. Todos os direitos reservados.</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@section scripts {
    <!-- Outros links e scripts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}