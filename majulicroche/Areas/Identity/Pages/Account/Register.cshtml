@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar-se";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <section class="p-4 shadow rounded bg-white">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center mb-4">Crie uma nova conta.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                    <label asp-for="Input.Email">E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="senha" />
                    <label asp-for="Input.Password">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirmar senha" />
                    <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar-se</button>
            </form>
        </section>
    </div>
    <div class="col-md-8 mt-5">
        <section class="p-4 shadow rounded bg-white">
            <h3 class="text-center mb-4">Use outro serviço para se registrar.</h3>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div class="text-center">
                    <p>
                        Não há serviços de autenticação externa configurados. Veja este <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                            artigo
                            sobre como configurar este aplicativo ASP.NET para oferecer suporte a serviços de login externos
                        </a>.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-flex justify-content-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary mx-2" name="provider" value="@provider.Name" title="Registrar-se usando sua conta @provider.DisplayName">@provider.DisplayName</button>
                        }
                    </div>
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <!-- Inclua o script de validação -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Inclua os outros links e scripts, como Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}