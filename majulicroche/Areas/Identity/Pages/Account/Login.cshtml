@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <section class="p-4 shadow rounded bg-white">
            <form id="account" method="post">
                <h2 class="text-center mb-4">Use uma conta local para entrar.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                    <label asp-for="Input.Email" class="form-label">E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="senha" />
                    <label asp-for="Input.Password" class="form-label">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Lembrar-me</label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                </div>
                <div class="mt-3 text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar-se como novo usuário</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação de e-mail</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-8 mt-5">
        <section class="p-4 shadow rounded bg-white">
            <h3 class="text-center mb-4">Use outro serviço para entrar.</h3>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div class="text-center">
                    <p>
                        Não há serviços de autenticação externa configurados. Veja este <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                            artigo
                            sobre como configurar este aplicativo ASP.NET para oferecer suporte a serviços de login externos
                        </a>.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-flex justify-content-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary mx-2" name="provider" value="@provider.Name" title="Entrar usando sua conta @provider.DisplayName">@provider.DisplayName</button>
                        }
                    </div>
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <!-- Inclua o script de validação -->
    <partial name="_ValidationScriptsPartial" />

    <!-- Inclua os outros links e scripts, como Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
